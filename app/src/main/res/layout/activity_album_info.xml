<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ivan.itunesdisplayapi.AlbumInfoActivity">

    <RelativeLayout
        android:layout_weight = ".62"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewAlbumCover"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="6dp"/>


        <TextView
            android:id="@+id/textViewAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageViewAlbumCover"
            android:layout_toEndOf="@+id/imageViewAlbumCover"
            android:text="Line 1"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewAlbum"
            android:layout_toEndOf="@+id/imageViewAlbumCover"
            android:text="Line 2"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewGenre"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/textViewArtist"
            android:layout_toEndOf="@+id/imageViewAlbumCover"
            android:text="Line 3"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewYear"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/textViewGenre"
            android:layout_toEndOf="@+id/imageViewAlbumCover"
            android:text="Line 4"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="20dp"

            android:layout_below="@+id/textViewYear"
            android:layout_toEndOf="@+id/imageViewAlbumCover"
            android:text="Line 5"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight = ".38"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView

            android:id="@+id/recyclerViewTracks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/darker_gray"
            android:padding="4dp"
            android:scrollbars="vertical" />



    </RelativeLayout>





</LinearLayout>

